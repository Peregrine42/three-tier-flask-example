{
  "scripts": {
    "start": "python app.py",
    "start:watch": "npm run nodemon -- -x 'npm start'",
    "pip:compile": "uv pip compile requirements-dev.in requirements.in --output-file=./requirements.txt",
    "pip:update": "uv pip install -r ./requirements.txt",
    "pip:install": "npm run pip:compile && npm run pip:update",
    "tsc": "tsc",
    "webpack": "webpack",
    "webpack:watch": "npm run nodemon -- -x 'npm run webpack'",
    "wait-on": "wait-on",
    "postgres:pull": "docker pull $DOCKER_POSTGRES_IMAGE_NAME",
    "postgres:reset": "docker rm -f app-postgres && docker run --pull=never --name $DOCKER_POSTGRES_CONTAINER_NAME -v $PWD/deps/postgres/init-db.sh:/docker-entrypoint-initdb.d/init-db.sh --name $DOCKER_POSTGRES_CONTAINER_NAME -e POSTGRES_ROOT_USER -e POSTGRES_APP_USER -e POSTGRES_SCHEMA -e POSTGRES_PASSWORD -p $POSTGRES_PORT:5432 $DOCKER_POSTGRES_IMAGE_NAME",
    "postgres": "docker start app-postgres --attach",
    "nodemon": "nodemon --delay 0.3 --signal SIGTERM -e js,jsx,eta,py,html,j2,css -i static",
    "wait-no-postgres": "wait-on -r tcp:$POSTGRES_PORT -t 3000 > /dev/null 2>&1",
    "wait-on-postgres": "wait-on tcp:$POSTGRES_PORT && (npm run wait-no-postgres || echo '') && wait-on tcp:$POSTGRES_PORT",
    "migration:create": "GOOSE_MIGRATION_DIR=migrations npm run goose -- -table migrations create",
    "migration:seed:create": "GOOSE_MIGRATION_DIR=seeds npm run goose -- -table=seeds create",
    "seed": "GOOSE_MIGRATION_DIR=seeds npm run goose -- -table=seeds up",
    "seed:down": "GOOSE_MIGRATION_DIR=seeds npm run goose -- -table=seeds down",
    "migrate": "GOOSE_MIGRATION_DIR=migrations npm run goose -- -table=migrations up",
    "migrate:down": "GOOSE_MIGRATION_DIR=migrations npm run goose -- -table=migrations down",
    "goose:install": "curl -fsSL https://raw.githubusercontent.com/pressly/goose/master/install.sh | GOOSE_INSTALL=. sh",
    "goose": "./bin/goose",
    "hash:phrase": "node -e \"(async () => { console.log(await (require('@node-rs/argon2').hash('$PHRASE'))) })()\""
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@node-rs/argon2": "^1.8.3",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "tsc-silent": "^1.2.2",
    "typescript": "^5.5.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "chart.js": "^4.4.3",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1"
  }
}
